@model IEnumerable<_Net.Models.Contrato>
@{
    ViewData["Title"] = "Contratos";
    var rol = Context.Session.GetString("UsuarioRol");
}

<div class="text-center mb-3">
    <h1 class="display-4">Listado de Contratos</h1>
    <a class="btn btn-success" asp-action="Create">
        <i class="bi bi-plus-lg"></i> Nuevo
    </a>
</div>
<form method="get" class="mb-3">
    <div class="row g-2 align-items-center">
        <div class="col-auto">
            <label>Fecha inicio</label>
            <input type="date" name="fechaInicio" class="form-control" value="@ViewBag.FechaInicio" />
        </div>
        <div class="col-auto">
            <label>Fecha fin</label>
            <input type="date" name="fechaFin" class="form-control" value="@ViewBag.FechaFin" />
        </div>
        <div class="col-auto">
            <button type="submit" class="btn btn-primary mt-4">Buscar inmuebles disponibles</button>
        </div>
    </div>
</form>

@if (ViewBag.InmueblesDisponibles != null)
{
    <h3>Inmuebles disponibles entre @ViewBag.FechaInicio y @ViewBag.FechaFin</h3>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>ID Inmueble</th>
                <th>Dirección</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var inm in ViewBag.InmueblesDisponibles)
            {
                <tr>
                    <td>@inm.IdInmueble</td>
                    <td>@inm.Direccion</td>
                </tr>
            }
        </tbody>
    </table>
}

<form method="get" class="mb-3">
    <div class="row g-2 align-items-center">
        <div class="col-auto">
            <label for="dias" class="col-form-label">Filtrar por vencimiento</label>
        </div>
        <div class="col-auto">
            <select name="dias" class="form-select" asp-items="ViewBag.DiasOpciones" onchange="this.form.submit()">
                <option value="">-- Todos --</option>
            </select>
        </div>

        <div class="col-auto">
            <label for="idInquilino" class="col-form-label">Filtrar por inquilino</label>
        </div>
        <div class="col-auto">
            <select name="idInquilino" class="form-select" asp-items="ViewBag.Inquilinos" onchange="this.form.submit()">
                <option value="">-- Todos --</option>
            </select>
        </div>

        <div class="col-auto form-check">
            <input type="checkbox" class="form-check-input" id="vigente" name="vigente" value="true"
                @(ViewBag.VigenteSeleccionado == true ? "checked" : "") onchange="this.form.submit()" />
            <label class="form-check-label" for="vigente">Solo vigentes</label>
        </div>
    </div>
</form>



<table class="table">
    <thead>
        <tr>
            <th>Inquilino</th>
            <th>Inmueble</th>
            <th>@Html.DisplayNameFor(model => model.FechaInicio)</th>
            <th>@Html.DisplayNameFor(model => model.FechaFin)</th>
            <th>@Html.DisplayNameFor(model => model.ValorMensual)</th>
            <th>@Html.DisplayNameFor(model => model.Vigente)</th>
            <th>Acciones</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var contrato in Model)
        {
            <tr>
                <td>@contrato.InquilinoNombreCompleto</td>
                <td>@contrato.InmuebleDireccion</td>
                <td>@contrato.FechaInicio.ToShortDateString()</td>
                <td>@contrato.FechaFin.ToShortDateString()</td>
                <td>@contrato.ValorMensual</td>
                <td>@(contrato.Vigente ? "Sí" : "No")</td>
                <td>
                    <div class="btn-group">
                        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@contrato.IdContrato">Editar</a>
                        @if (User.IsInRole("Administrador"))
                        {
                            <a class="btn btn-danger" asp-action="Eliminar" asp-route-id="@contrato.IdContrato">Eliminar</a>
                        }
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
