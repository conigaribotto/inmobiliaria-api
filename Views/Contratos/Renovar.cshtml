@model _Net.Models.Contrato
@{
    ViewData["Title"] = "Renovar Contrato";
    int contratoOrigenId = ViewBag.ContratoOrigenId ?? 0;
}

<h2>Renovar Contrato #@contratoOrigenId</h2>

<form asp-action="Renovar" method="post">
    <input type="hidden" name="contratoOrigenId" value="@contratoOrigenId" />

    <div class="mb-3">
        <label class="form-label">Inquilino</label>
        <input class="form-control" value="@Model.IdInquilino" readonly />
    </div>

    <div class="mb-3">
        <label class="form-label">Inmueble</label>
        <input type="hidden" name="IdInmueble" value="@Model.IdInmueble" />
<input class="form-control" value="@Model.IdInmueble" readonly />

    </div>

    <div class="row g-2">
        <div class="col-md-4 mb-3">
            <label class="form-label">Fecha Inicio</label>
            <input type="date" name="FechaInicio" class="form-control" value="@Model.FechaInicio.ToString("yyyy-MM-dd")" />
            <span asp-validation-for="FechaInicio" class="text-danger"></span>
        </div>
        <div class="col-md-4 mb-3">
            <label class="form-label">Fecha Fin</label>
            <input type="date" name="FechaFin" class="form-control" value="@Model.FechaFin.ToString("yyyy-MM-dd")" />
            <span asp-validation-for="FechaFin" class="text-danger"></span>
        </div>
        <div class="col-md-4 mb-3">
            <label class="form-label">Valor Mensual</label>
            <input type="number" step="0.01" name="ValorMensual" class="form-control" value="@Model.ValorMensual" />
            <span asp-validation-for="ValorMensual" class="text-danger"></span>
        </div>
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-success">Renovar</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
